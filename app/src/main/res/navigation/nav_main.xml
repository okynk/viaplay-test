<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/sections">

    <fragment
        android:id="@+id/sections"
        android:name="com.okynk.viaplaytest.feature.screen.sections.SectionsFragment"
        tools:layout="@layout/fragment_sections">
        <action
            android:id="@+id/open_detail"
            app:destination="@id/detail">

            <argument
                android:name="link"
                app:argType="com.okynk.viaplaytest.model.LinkEntity" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/detail"
        android:name="com.okynk.viaplaytest.feature.screen.detail.DetailFragment"
        tools:layout="@layout/fragment_detail">
        <argument
            android:name="link"
            android:defaultValue="@null"
            app:argType="com.okynk.viaplaytest.model.LinkEntity"
            app:nullable="true" />
    </fragment>

</navigation>